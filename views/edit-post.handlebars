<article style="background-color:#F2E5D7; border-radius:10px; margin:20px">
  <a style="padding:20px; text-decoration:none; color:black" href="/dash"> &larr; Back to dashboard</a>
  <h2 style="text-align:center">
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div style="margin:30px; display:flex; justify-content:center">
      <input style="margin:10px" name="post-title" type="text" value="{{post.title}}" />
      <textarea style="margin:10px" name="post-text" type="text" value="{{post.text}}"></textarea>
    </div>
    <div style="margin:30px; display:flex; justify-content:center; text-align:center">
        by you on {{format_date post.created_at}}
      |
      <a style="text-decoration:none; color:black" href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <div style="margin:30px; display:flex; justify-content:center;">
      <button type="submit">Save post</button>
      <button type="button" class="delete-post-btn">Delete post</button>
    </div>

  </form>
</article>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
