<div style="display:flex; justify-content:center">
  <form style="background-color:#F2E5D7; border-radius:10px; margin:20px; width: 20%;" class="login-form">
    <div style="background-color:#F2E5D7; border-radius:10px; margin:20px; padding:20px">
      <label for="email-login">email:</label>
      <input type="text" id="email-login" />
    </div>
    <div style="background-color:#F2E5D7; border-radius:10px; margin:20px; padding:20px">
      <label for="password-login">password:</label>
      <input type="password" id="password-login" />
    </div>
    <div style="background-color:#F2E5D7; border-radius:10px; margin:20px; padding:20px">
      <button type="submit">login</button>
    </div>
  </form>

  <form style="background-color:#F2E5D7; border-radius:10px; margin:20px; width: 20%" class="signup-form">
    <div style="background-color:#F2E5D7; border-radius:10px; margin:20px; padding:20px">
      <label for="username-signup">username:</label>
      <input type="text" id="username-signup" />
    </div>
    <div style="background-color:#F2E5D7; border-radius:10px; margin:20px; padding:20px;">
      <label for="email-signup">email:</label>
      <input type="text" id="email-signup" />
    </div>
    <div style="background-color:#F2E5D7; border-radius:10px; margin:20px; padding:20px;">
      <label for="password-signup">password:</label>
      <input type="password" id="password-signup" />
    </div>
    <div style="background-color:#F2E5D7; border-radius:10px; margin:20px">
      <button type="submit">signup</button>
    </div>
  </form>
</div>


